#include <stdio.h>
#include <string.h>

int main(void) {
  char string[100];
  int count = 0;
  int i = 0;

    printf("Digite uma palavra \n\n\n");
  fgets(string,sizeof(string),stdin);

  while(string[i] != '\0'){
    if(string[i] == 'a' || string[i] == 'A'){
      count++;      
    }
    i++;
  }
if(count > 0){
  printf("A palavra tem %d letras a", count);
}
  else{
    printf("A palavra n√£o tem letras a");
  }



  return 0;
}
